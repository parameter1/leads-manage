<div class="row mt-3 mb-3">
  <div class="col">
    {{#if hasAssignments}}
      {{#if activeCustomer}}
        <span class="badge badge-pill badge-info">Customer: {{activeCustomer.name}}</span>
      {{/if}}
      {{#each uniqueTags as |tag|}}
        <span class="badge badge-pill badge-info">Tag: {{tag.name}}</span>
      {{/each}}
    {{else}}
      <span class="text-info">No tracking currently assigned.</span>
    {{/if}}
  </div>
</div>

<div class="row">
  <div class="col">
    <button class="btn btn-primary" {{action "toggleSettings" true}}>
      {{entypo-icon "cog"}}
      {{#if showSettings}}{{entypo-icon "chevron-small-down"}}{{else}}{{entypo-icon "chevron-small-up"}}{{/if}}
    </button>
  </div>
</div>

{{#if showSettings}}
  <div class="row mt-3">
    <div class="col-12 col-lg-6 mb-3">
      {{extracted-url/assignment
        class="mnh-100"
        model=model.host
        value=model.host.value
      }}
    </div>
    <div class="col-12 col-lg-6 mb-3">
      {{extracted-url/assignment
        class="mnh-100"
        model=model
        value=model.values.resolved
      }}
    </div>
  </div>
  <div class="row">
    <div class="col">
      <button class="btn btn-secondary" {{action "crawl" false}}>
        {{entypo-icon "cycle"}} Crawl Again
      </button>
      <br>
      <small>
        Last retrieved: {{ moment-from-now model.lastCrawledDate }}
      </small>
    </div>
  </div>
{{/if}}
